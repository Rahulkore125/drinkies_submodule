<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="stock_location_form_inherit" model="ir.ui.view">
           <field name="name">stock location form inherit</field>
           <field name="model">stock.location</field>
           <field name="inherit_id" ref="stock.view_location_form"/>
           <field name="arch" type="xml">
               <xpath expr="//group[1]" position="after">
                    <group string="Magento Source Information">
                        <field name="is_from_magento"/>
                        <field name="magento_source_code"/>
                        <field name="postcode"/>
                    </group>
               </xpath>
           </field>
       </record>

        <record id="magento_city_action" model="ir.actions.act_window">
            <field name="name">magento city</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">magento.city</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="magento_city_tree" model="ir.ui.view">
            <field name="name">magento city tree</field>
            <field name="model">magento.city</field>
            <field name="arch" type="xml">
                <tree string="Magento City">
                    <field name="name"/>
                    <field name="external_id"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>